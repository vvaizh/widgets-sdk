<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Module>
   <ModulePrefs author="Some Company" author_email="person.some@company.ru" width="100%" height="100%" title="HelloWorld" version="1.0">
      <Require feature="pubsub"/>
   </ModulePrefs>
   <Content content-type="text/html" type="html">
       <![CDATA[
        <style> h2 { color: #EDB200; } </style>
        <h2>Hello, world!</h2>
        <p>It's example</p>
<button onclick="alert('секретное значение: ' + $('input#secret-field').val())">Показать секретное значение виджета</button>
<button onclick="to_page()">пнуть окружающую страницу из виджета</button>
<input type="hidden" value="secret value" id="secret-field" />
        <script language="javascript" type="text/javascript">
              gadgets.util.registerOnLoadHandler(function(){
gadgets.pubsub.subscribe('forward',on_from_page);
gadgets.pubsub.subscribe('back',on_from_widget);
                   alert('Hello, world!');
              });

on_from_page= function(source,data)
{
   alert('ай яй яй пнули в виджет source="' + source + '", data="' + data + '"');
   console.log(data);
};

on_from_widget= function(source,data)
{
   alert('ай яй яй пнули в виджет из виджета source="' + source + '", data="' + data + '"');
   console.log(data);
};

to_page= function()
{
   gadgets.pubsub.publish('back',{a:1});
};

        </script>
       ]]>
   </Content>
</Module>
